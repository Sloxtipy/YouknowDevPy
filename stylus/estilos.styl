@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181
body
    font-family 'Varela Round', sans-serif
    font-size 16px

.figure
    margin 0
.button-menu
   position absolute
.container
    padding 1.4rem
    font-size 0
    text-align center
.name
    color gris_oscuro
.menu
    display none
.relative
    position relative
.author
    color gris_claro
.header
    height 3.5em
    .title
        font-size 1.1em
        text-align center
        margin 0
        line-height 3.5em
    a
      display none

.song
    display inline-block
    font-size 1rem
    margin-right 1em
    margin-button 1em
    text-align left
    width 8rem
    &:nth-child(even)
        margin-right 0
    p
        margin .5em 0
